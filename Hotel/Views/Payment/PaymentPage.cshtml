@{
    Layout = "_Layout2";
    ViewBag.Title = "Room";
}
<link rel="stylesheet" href="/css/payment.css" asp-append-version="true">


<div class="checkout-container">
    <div class="left-side">
        <div class="text-box">
            <h1 class="home-heading">EASYSTAYS</h1>
            <p class="home-des"><em>Where Comfort and Memories Are Made </em></p>
            <hr class="left-hr" />
        </div>
    </div>

    <div class="right-side">
        <div class="receipt">
            <div>
                <h2 class="receipt-heading">Receipt Summary</h2>
                <h3>
                    @ViewBag.roomCategory
                </h3>
                <p>
                    @ViewBag.checkIn.ToString("yyyy-MM-dd") to
                    @ViewBag.checkOut.ToString("yyyy-MM-dd")
                </p>
            </div>
            <div>
                <table class="table">
                    <tr>
                        <td>RM @ViewBag.roomPrice x @ViewBag.numberOfDays nights</td>
                        <td class="price">RM @ViewBag.roomTotalPrice</td>
                    </tr>
                    @if (ViewBag.SelectedFoodServices != null)
                    {
                        foreach (var f in ViewBag.SelectedFoodServices)
                        {
                            <tr>
                                <td>@f.category: @f.serviceName x @f.quantity</td>
                                <td class="price">RM @f.price</td>
                            </tr>
                        }
                    }
                    @if (ViewBag.SelectedRoomServices != null)
                    {
                        foreach (var r in ViewBag.SelectedRoomServices)
                        {
                            <tr>
                                <td>@r.category: @r.serviceName x @r.quantity</td>
                                <td class="price">RM @r.price</td>
                            </tr>
                        }
                    }
                    <tr>
                        <td>Subtotal</td>
                        <td class="price">RM @ViewBag.Subtotal</td>
                    </tr>
                    <tr>
                        <td>Tax</td>
                        <td class="price">RM @ViewBag.Tax</td>
                    </tr>
                    <tr class="total">
                        <td>Total</td>
                        <td class="price">RM @ViewBag.Total</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="payment-info">
            <h3 class="payment-heading">Payment Information</h3>
            <form class="form-box" enctype="text/plain" method="get" target="_blank">
                <div>
                    <label for="full-name">Full Name</label>
                    <input id="full-name" name="full-name" placeholder="Ali" required type="text" />
                </div>

                <div>
                    <label for="credit-card-num">
                        Card Number
                        <span class="card-logos">
                            <i class="card-logo fa-brands fa-cc-visa"></i>
                            <i class="card-logo fa-brands fa-cc-amex"></i>
                            <i class="card-logo fa-brands fa-cc-mastercard"></i>
                            <i class="card-logo fa-brands fa-cc-discover"></i>
                        </span>
                    </label>
                    <input id="credit-card-num" name="credit-card-num" placeholder="1111-2222-3333-4444" required type="text" />
                </div>

                <div>
                    <p class="expires">Expires on:</p>
                    <div class="card-experation">
                        <label for="expiration-month">Month</label>
                        <select id="expiration-month" name="expiration-month" required>
                            <option value="">Month:</option>
                            <option value="">January</option>
                            <option value="">February</option>
                            <option value="">March</option>
                            <option value="">April</option>
                            <option value="">May</option>
                            <option value="">June</option>
                            <option value="">July</option>
                            <option value="">August</option>
                            <option value="">September</option>
                            <option value="">October</option>
                            <option value="">November</option>
                            <option value="">Decemeber</option>
                        </select>

                        <label class="expiration-year">Year</label>
                        <select id="experation-year" name="experation-year" required>
                            <option value="">Year</option>
                            <option value="">2023</option>
                            <option value="">2024</option>
                            <option value="">2025</option>
                            <option value="">2026</option>
                        </select>
                    </div>
                </div>

                <div>
                    <label for="cvv">CVV</label>
                    <input id="cvv" name="cvv" placeholder="415" type="text" required />
                </div>

                <button class="btn" target="_blank">Pay Now</button>
            </form>
        </div>
    </div>
</div>
