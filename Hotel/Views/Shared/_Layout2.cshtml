<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- icon Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <link rel="stylesheet" href="/css/_Layout2.css" asp-append-version="true">
    @RenderSection("head", false)
</head>
<body>
    <!-- Header Section -->
    <header class="navbar">
        <div class="logo">
            <a href="/">EASYSTAYS</a>
        </div>
        <div class="nav-links">
            <a href="/">Home</a>
            <a href="/Home/RoomPage">Room</a>
        </div>
        <div class="nav-login">
            @if (User.IsInRole("Member"))
            {
                <a href="/Account/Profile" class="login-button">Profile</a>
                <a href="/Account/Logout" class="login-button">Logout</a>
            }
            else
            {
                <a href="/Account/Login" class="login-button">Login</a>
            }
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <div class="footer-left">
                <p>Follow Our Social Media:</p>
                <ul>
                    <li><a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a href="#" class="social-icon"><i class="fab fa-instagram"></i></a></li>
                </ul>
            </div>

            <div class="footer-center">
                <p>Have any question?</p>
                <p>Email: <a href="mailto:info@example.com">info@example.com</a></p>
                <p>Phone: <a href="tel:+1234567890">+1234567890</a></p>
            </div>

            <div class="footer-right">
                <img src="/img/HomePage/LOGO.jpg" alt="Company Logo" class="footer-logo">
                <p>&copy; 2024 EASYSTAYS MALAYSIA</p>
            </div>
        </div>
    </footer>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="/js/app.js" asp-append-version="true"></script>
    @RenderSection("foot", false)
</body>
</html>
