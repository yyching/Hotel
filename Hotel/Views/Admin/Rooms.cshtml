@model IEnumerable<Room>

@{
    Layout = "_NavigationBar";
    ViewBag.Title = "Rooms Management";
}

<link href="/css/_Insert.css" rel="stylesheet" />

<div class="table-responsive">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row-table">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1">@ViewBag.Title</h2>
                        <button id="addRoomBtn" class="au-btn au-btn-icon au-btn--blue">
                            <i class="zmdi zmdi-plus"></i>add item
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Room ID</th>
                <th>Room Number</th>
                <th>Room Category</th>
                <th>Theme</th>
                <th>Capacity</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rm in Model)
            {
                <tr>
                    <td>@rm.RoomID</td>
                    <td>@rm.RoomNumber</td>
                    <td>@rm.Category.CategoryName</td>
                    <td>@rm.Category.Theme</td>
                    <td>@rm.Category.Capacity</td>
                    <td>@rm.Status</td>
                    <td>
                        <button class="btn btn-primary btn-sm editRoomBtn" data-id="@rm.RoomID">Edit</button>
                        @if (rm.Status == "Active")
                        {
                            <button data-id="@rm.RoomID" class="btn btn-danger btn-sm btn-terminate">Terminate</button>
                        }
                        else if (rm.Status == "Terminate")
                        {
                            <button data-id="@rm.RoomID" class="btn btn-success btn-sm btn-activate">Activate</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Popup Modal for Add or Edit Room -->
<div id="addRoomModal" class="modal" style="display:none;">
    <div class="modal-content">
        <div class="modal-header">
            <span id="modalTitle" class="modal-title">Add Room</span>
            <button id="closeModal" class="close-btn">&times;</button>
        </div>
        <div id="modalBody" class="modal-body">
            <!-- Content -->
        </div>
    </div>
</div>

<!-- JavaScript to Load the Partial View and Control Modal -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Elements
        const addRoomBtn = $("#addRoomBtn");
        const editRoomBtns = $(".editRoomBtn");
        const addRoomModal = $("#addRoomModal");
        const closeModal = $("#closeModal");
        const modalTitle = $("#modalTitle");
        const modalBody = $("#modalBody");

        // Function to load the modal with a specified URL and title
        function loadModal(url, title) {
            $.ajax({
                url: url,
                type: 'GET',
                success: function (data) {
                    modalTitle.text(title);  // Set modal title
                    modalBody.html(data);  // Load content
                    addRoomModal.css("display", "flex");  // Show modal
                },
                error: function () {
                    alert("Failed to load the form.");
                }
            });
        }

        // Open Modal for Adding a Room
        addRoomBtn.click(function () {
            loadModal('/Admin/_AddRoom', "Add Room");
        });

        // Open Modal for Editing a Room
        editRoomBtns.click(function () {
            const roomId = $(this).data("id");
            loadModal('/Admin/_UpdateRoom/' + roomId, "Edit Room");
        });

        // Close Modal
        closeModal.click(function () {
            addRoomModal.css("display", "none");
        });

        // Close Modal if outside is clicked
        $(window).click(function (event) {
            if (event.target === addRoomModal[0]) {
                addRoomModal.css("display", "none");
            }
        });

        // Handle Terminate Button Click
        $('.btn-terminate').on('click', function () {
            var roomId = $(this).data('id');  // Make sure this is an integer, or cast if needed.

            $.ajax({
                type: 'POST',
                url: '/Admin/TerminateRoom/' + roomId,  // Ensure URL is correct for your route
                success: function (response) {
                    location.reload();  // Refresh the page to reflect changes
                },
                error: function (xhr, status, error) {
                    alert("An error occurred while terminating the room.");
                }
            });
        });
    
        // Handle Activate Button Click
        $('.btn-activate').on('click', function () {
            var roomId = $(this).data('id');  // Ensure roomId is correctly passed

            $.ajax({
                type: 'POST',
                url: '/Admin/ActivateRoom/' + roomId,  // Ensure URL is correct for your route
                success: function (response) {
                    location.reload();  // Refresh the page to reflect changes
                },
                error: function (xhr, status, error) {
                    alert("An error occurred while activating the room.");
                }
            });
        });

        // Function to handle Room status changes (Activate/Terminate)
        function handleRoomStatusChange(roomId, action, newStatus) {
            $.ajax({
                type: 'POST',
                url: '/Admin/' + action + '/' + roomId,
                success: function () {
                    location.reload();  // Refresh the page to reflect changes
                },
                error: function () {
                    alert(`An error occurred while changing room status to ${newStatus}.`);
                }
            });
        }
    });
</script>



