@model IEnumerable<Category>
@{
    Layout = "_NavigationBar";
    ViewBag.Title = "Room Category";
}

<div class="table-responsive">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row-table">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1">@ViewBag.Title</h2>
                        <div>
                            <a class="au-btn au-btn-icon au-btn--blue" href="/Admin/AddRoomCategory">
                                <i class="zmdi zmdi-plus"></i>add item
                            </a>
                            <a class="au-btn au-btn-icon au-btn--green">
                                <i class="zmdi zmdi-plus"></i>Import
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
                <th>Theme</th>
                <th>Size</th>
                <th>Capacity</th>
                <th>Bed</th>
                <th>Price (Per Night)</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ct in Model)
            {
                <tr>
                    <td>@ct.CategoryID</td>
                    <td>@ct.CategoryName</td>
                    <td>@ct.Theme</td>
                    <td>@ct.Size</td>
                    <td>@ct.Capacity</td>
                    <td>@ct.Bed</td>
                    <td>@ct.PricePerNight</td>
                    <td>@ct.Status</td>
                    <td>
                        <button data-get="/Admin/UpdateRoomCategory/@ct.CategoryID" class="btn btn-primary btn-sm">Edit</button>
                        @if (ct.Status == "Active")
                        {
                            <button data-post="/Admin/TerminateRoomCategory/@ct.CategoryID" class="btn btn-danger btn-sm">Terminate</button>
                        }
                        else if (ct.Status == "Terminate")
                        {
                            <button data-post="/Admin/ActivateRoomCategory/@ct.CategoryID" class="btn btn-success btn-sm">Activate</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
