@model UpdateProfileVM

@{
    Layout = "_Layout2";
    ViewBag.Title = "Profile";
}
<link rel="stylesheet" href="/css/Account.css" asp-append-version="true">

<div class="profile-container">
    <aside class="sidebar">
        <h1>My Account</h1>
        <ul>
            <li>Profile</li>
            <li>Change Password</li>
            <li>My Booking</li>
        </ul>
    </aside>
    <main class="content">
        <h2>My Profile</h2>
        <form class="profile-content">
            <div class="profile-form">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" autofocus>
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" autofocus>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" autofocus>
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
                <button class="save-btn">Save</button>
            </div>

            <div class="profile-picture">
                <label asp-for="Photo"></label>
                <label class="upload">
                    <input asp-for="Photo" accept="image/jpeg,image/png" type="file" hidden>
                    <img src="/photos/@Model.UserImage" class="picture-placeholder">
                </label>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
        </form>
    </main>
</div>