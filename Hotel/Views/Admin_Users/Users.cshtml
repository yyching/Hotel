@model IEnumerable<User>
@{
    Layout = "_NavigationBar";
    ViewBag.Title = "Users Management";
}

<div class="table-responsive">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row-table">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1">@ViewBag.Title</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr class="@(u.Status == "Terminated" ? "table-danger" : "")">
                    <td>@u.UserID</td>
                    <td>@u.Name</td>
                    <td>@u.Email</td>
                    <td>@u.PhoneNumber</td>
                    <td>@u.Status</td>
                    <td>
                        @if (u.Status == "Active")
                        {
                            <button class="btn btn-danger btn-sm">Terminate</button>
                        }
                        else if (u.Status == "Terminated")
                        {
                            <button class="btn btn-success btn-sm">Activate</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
