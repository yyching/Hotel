@model RoomVM

@{
    Layout = "_Layout";
    ViewBag.Title = "Room";
}
<link rel="stylesheet" href="/css/room.css" asp-append-version="true">
<script src="/js/room.js" defer></script>

<!-- Booking Section -->
<section class="booking-section">
    <form class="booking-form">
        <div class="form-group">
            <label for="check-in">Check In</label>
            <input type="date" id="check-in" name="check-in">
        </div>
        <div class="form-group">
            <label for="check-out">Check Out</label>
            <input type="date" id="check-out" name="check-out">
        </div>
        <div class="form-group">
            <label for="adults">Adults</label>
            <input type="number" id="adults" name="adults">
        </div>
        <div class="form-group">
            <label for="children">Children</label>
            <input type="number" id="children" name="children">
        </div>
        <button type="submit" class="btn">Check Availability</button>
    </form>
</section>


<!-- Filter Section -->
<div class="main-container">
    <div class="filter-container">

        <div class="search-bar">
            <input type="text" placeholder="Search Hotel" id="search-bar">
        </div>

        <div class="filter-group">
            <h3>Price</h3>
            <div class="price-input">
                <div class="field">
                    <span>Min</span>
                    <input type="number" class="input-min" value="100">
                </div>
                <div class="separator">-</div>
                <div class="field">
                    <span>Max</span>
                    <input type="number" class="input-max" value="500">
                </div>
            </div>
            <div class="slider">
                <div class="progress"></div>
            </div>
            <div class="range-input">
                <input type="range" class="range-min" min="100" max="500" value="100" step="10">
                <input type="range" class="range-max" min="100" max="500" value="500" step="10">
            </div>
        </div>

        <div class="filter-group">
            <h3>Theme</h3>
            <div class="filter-item">
                <input type="checkbox" id="theme-city" class="filter-checkbox" checked>
                <label for="theme-city">City</label>
            </div>
            <div class="filter-item">
                <input type="checkbox" id="theme-nature" class="filter-checkbox" checked>
                <label for="theme-nature">Nature</label>
            </div>
        </div>
        <div class="filter-group">
            <h3>Room Type</h3>
            <div class="filter-item">
                <input type="checkbox" id="single-room" class="filter-checkbox">
                <label for="single-room">Single Room</label>
            </div>
            <div class="filter-item">
                <input type="checkbox" id="double-room" class="filter-checkbox">
                <label for="double-room">Double Room</label>
            </div>
            <div class="filter-item">
                <input type="checkbox" id="family-room" class="filter-checkbox">
                <label for="family-room">Family Room</label>
            </div>
            <div class="filter-item">
                <input type="checkbox" id="premium-king-room" class="filter-checkbox">
                <label for="premium-king-room">Premium King Room</label>
            </div>
        </div>

        <div class="clear-all-container">
            <button id="clear-all" class="clear-button">Clear All</button>
        </div>
    </div>

    <!-- Hotel Table -->
    <div class="content-container">
        <div class="hotel-table">
            <table>
                <thead>
                    <tr>
                        <th>Hotel Image</th>
                        <th>Hotel Name</th>
                        <th>Size</th>
                        <th>Capacity</th>
                        <th>Bed</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model.Rooms)
                    {
                        <tr>
                            <td><img src='/uploads/@room.Category.RoomImage' alt="Hotel 1" class="hotel-image"></td>
                            <td>@room.Category.CategoryName</td>
                            <td>@room.Category.Size sq. ft.</td>
                            <td>Max person @room.Category.Capacity</td>
                            <td>@room.Category.Bed</td>
                            <td>RM @room.Category.PricePerNight/night</td>
                            <td><a href="/Home/RoomDetailsPage?roomID=@room.RoomID" class="book-btn" target="_blank">Book Now</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>